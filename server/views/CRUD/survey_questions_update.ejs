<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<main class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <!--Adding form-->
            <br>
            <br>
            <div class="jumbotron">
                <h1 class="display-4">Update questions</h1>
            </div>
            <br>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="question1TextField">Question 1: </label>
                    <input type="text" class="form-control" id="question1TextField" placeholder="Enter the Question 1"
                        name="question1" value="<%= Survey.question1 %>" required>
                </div>
                <div class="form-group">
                    <label for="question2TextField">Question 2: </label>
                    <input type="text" class="form-control" id="question2TextField" placeholder="Enter the Question 2"
                        name="question2" value="<%= Survey.question2 %>" required>
                </div>
                <div class="form-group">
                    <label for="question3TextField">Question 3: </label>
                    <input type="text" class="form-control" id="question3TextField" placeholder="Enter the Question 3"
                        name="question3" value="<%= Survey.question3 %>" required>
                </div>
                <div class="form-group">
                    <label for="question4TextField">Question 4: </label>
                    <input type="text" class="form-control" id="question4TextField" placeholder="Enter the Question 4"
                        name="question4" value="<%= Survey.question4 %>" required>
                </div>
                <br>
                <!--Adding buttons to perform submit, cancel -->
                <button class="btn btn-success"><i class="fas fa-edit"></i> Submit</button>&nbsp;&nbsp;
                <a href="/surveyQuestions/surveyQuestionList" class="btn btn-warning"><i class="fa fa-times"
                        aria-hidden="true"></i> Cancel</a>

            </form>
        </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %> 

